{% extends 'base.html.twig' %}

{% block title %}Liste des devis{% endblock %}

{% block body %}
    <h1>Liste des devis</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Garage</th>
                <th>Status</th>
                <th>Produit</th>
                <th>Prix</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for devis in devis %}
            <tr>
                <td>{{ devis.id }}</td>
                <td>{{ devis.garage.name }}</td>
                <td>{{ devis.status }}</td>
                <td>{{ devis.produit.name }}</td>
                <td>{{ devis.price }}</td>
                <td>
                    <a href="{{ path('devis_show', {'id': devis.id}) }}">voir</a>
                    <a href="{{ path('devis_edit', {'id': devis.id}) }}">modifier</a>
                    <form method="post" action="{{ path('devis_delete', {'id': devis.id}) }}" style="display:inline-block">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ devis.id) }}">
                        <button type="submit">supprimer</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('devis_new') }}">Cr√©er un nouveau devis</a>
{% endblock %}
