    <main class="flex flex-col ml-5 w-[78%] max-md:ml-0 max-md:w-full">
      <section class="flex flex-col mt-6 text-sm max-md:mt-10 max-md:max-w-full">
        <header class="flex gap-2.5 self-start text-3xl font-semibold whitespace-nowrap text-slate-900">
          <img loading="lazy" src="https://cdn.builder.io/api/v1/image/assets/TEMP/ea309900440d355f76abf6877fc6fae17ca99b36ae9d2f99f69787c656e8dff7?apiKey=8247e33786d041d6ac5b339a992b1663&" class="shrink-0 w-12 aspect-square" alt="" />
          <h2 class="flex-auto my-auto">Clients</h2>
        </header>
        <section class="flex flex-col px-6 py-7 mt-20 text-black bg-white rounded-3xl shadow-sm max-md:px-5 max-md:mt-10 max-md:max-w-full">
          <h3 class="text-2xl font-semibold text-slate-900 max-md:max-w-full">Ajouter un nouveau client</h3>
          <form>
            <label for="clientName" class="block mt-6 max-md:max-w-full">Nom du client :</label>
            <input id="clientName" type="text" placeholder="Nom et prénom" class="justify-center items-start px-3 py-2.5 mt-2.5 italic font-extralight bg-white rounded-md border border-black border-solid max-md:pr-5 max-md:max-w-full w-full" />
            <label for="clientEmail" class="block mt-5 max-md:max-w-full">Email du client</label>
            <input id="clientEmail" type="email" placeholder="email" class="justify-center items-start p-3 mt-2.5 italic font-extralight whitespace-nowrap bg-white rounded-md border border-black border-solid max-md:pr-5 max-md:max-w-full w-full" />
            <label for="clientPhone" class="block mt-5 max-md:max-w-full">Téléphone du client :</label>
            <input id="clientPhone" type="tel" placeholder="Numéro de téléphone" class="justify-center items-start px-3 py-2.5 mt-1.5 italic font-extralight bg-white rounded-md border border-black border-solid max-md:pr-5 max-md:max-w-full w-full" />
            <button type="submit" class="justify-center self-start px-3 py-2.5 mt-9 font-medium text-white rounded-md bg-slate-900">Créer fiche client</button>
          </form>
        </section>
        <section class="flex flex-col px-6 pt-6 pb-20 mt-8 bg-white rounded-3xl shadow-sm max-md:px-5 max-md:max-w-full">
          <h3 class="text-2xl font-semibold text-slate-900 max-md:max-w-full">Liste des clients</h3>
          <form class="flex gap-5 mt-6 max-md:flex-wrap max-md:max-w-full">
            <input type="search" placeholder="Rechercher un client" class="grow justify-center items-start p-3 italic font-extralight text-black bg-white rounded-md border border-black border-solid w-fit max-md:pr-5 max-md:max-w-full" />
            <button type="submit" class="justify-center p-3 font-medium text-white whitespace-nowrap rounded-md bg-slate-900">Rechercher</button>
          </form>
          <table class="mt-4 mb-60 text-black bg-white rounded border border-solid border-zinc-400 max-md:mb-10 max-md:max-w-full">
            <thead>
              <tr class="font-semibold text-center whitespace-nowrap bg-white bg-opacity-0 text-slate-900">
                <th class="flex-1 px-3 py-3 text-xs leading-4 text-black border-t border-l border-solid bg-black bg-opacity-10 border-zinc-400">Numéro</th>
                <th class="flex-1 px-3 py-2.5 border-t border-l border-solid bg-black bg-opacity-10 border-zinc-400">Client</th>
                <th class="flex-1 px-3 py-2.5 border-t border-l border-solid bg-black bg-opacity-10 border-zinc-400">Email</th>
                <th class="flex-1 px-3 py-2.5 border-t border-l border-solid bg-black bg-opacity-10 border-zinc-400">Téléphone</th>
                <th class="flex-1 px-3 py-2.5 border-t border-l border-solid bg-black bg-opacity-10 border-zinc-400">Action</th>
              </tr>
            </thead>
            <tbody>
