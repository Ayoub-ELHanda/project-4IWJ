{% extends 'base.html.twig' %}

{% block title %}Edit Todo{% endblock %}

{% block body %}
<div class="container">
    <h1>Edit Todo</h1>
    <form method="POST">
        {{ form_start(form) }}
        {{ form_row(form.title) }}
        {{ form_row(form.done) }}
        <button type="submit">Save Changes</button>
        {{ form_end(form) }}
    </form>
</div>
{% endblock %}
