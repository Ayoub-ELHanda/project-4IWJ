{% extends 'base.html.twig' %}

{% block title %}Garage{% endblock %}

{% block body %}
    <h1>Garage</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ garage.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ garage.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ garage.address }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ garage.phone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ garage.email }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ garage.createdAt ? garage.createdAt|date('Y-m-d H:i:s') : '' }}</td>
